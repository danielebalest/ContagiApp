<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.batsoftware.contagiapp.utente.ProfiloActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    app:cardCornerRadius="150dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imgProfilo"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_baseline_account_circle_24_gray"/>

                </androidx.cardview.widget.CardView>

                <ListView
                    android:id="@+id/list_profilo"
                    android:layout_width="wrap_content"
                    android:layout_height="525dp"
                    android:divider="@android:drawable/button_onoff_indicator_on"
                    android:dividerHeight="5px"
                    android:footerDividersEnabled="false"
                    android:headerDividersEnabled="false">

                </ListView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/modifica_dati"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="10dp"
                    android:padding="10dp"
                    android:text="@string/modify_data"
                    android:textSize="16dp"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/ic_pencil_24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="10dp"
                    android:padding="10dp"
                    app:cornerRadius="20dp"
                    android:text="Log Out"
                    android:textSize="16dp"
                    app:backgroundTint="#F10A0A"/>



                <!--Button
                    android:id="@+id/certificato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="10dp"
                    android:text="inserisci certificato"
                    android:textSize="16dp"
                    app:cornerRadius="20dp"
                    android:padding="10dp"
                    app:icon="@drawable/ic_baseline_add_24"></Button>

                <ImageView
                    android:id="@+id/immaginecertificato"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"/> -->


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>