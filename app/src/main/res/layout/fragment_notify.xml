<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        tools:context=".notifiche.NotifyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEventiRossi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_partecipato_evento" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRichieste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_richiesta" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvInviti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_invito"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEventiACuiPartecipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_promemoria_evento"/>
    </LinearLayout>
</ScrollView>

